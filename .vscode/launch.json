{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        // MALWARE-BUILDER
        {
            "name": "Run Builder File->DB->DB+File",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Source/Ethanol.Cli/bin/Debug/net7.0/ethanol.exe",
            "args": [
                "run-builder",
                "-c",
                "context-builder.config.json"
            ],
            "cwd": "${workspaceFolder}/TestData/ContextBuilder",
            "env": {
                "POSTGRES_IP": "localhost",
                "POSTGRES_PORT": "1605",
                "POSTGRES_DATABASE": "ethanol",
                "POSTGRES_USER": "postgres",
                "POSTGRES_PASSWORD": "postgres"
            }
        },
        {
            "name": "Run Builder TCP->DB->File",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Source/Ethanol.Cli/bin/Debug/net7.0/ethanol.exe",
            "args": [
                "run-builder",
                "-c",
                "context-builder.tcp-in.config.json",
                "-p",
                "true"
            ],
            "cwd": "${workspaceFolder}/TestData/ContextBuilder",
            "env": {
                "POSTGRES_IP": "localhost",
                "POSTGRES_PORT": "1605",
                "POSTGRES_DATABASE": "ethanol",
                "POSTGRES_USER": "postgres",
                "POSTGRES_PASSWORD": "postgres"
            }
        },
        {
            "name": "Run Builder File->File",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "pwsh",
            "args": [
                "run-builder-tcp.ps1",
            ],
            "cwd": "${workspaceFolder}/TestData/ContextBuilder"
        },
        {
            "name": "builder run -c context-builder.ipfixcol.config.json < flows.ipfixcol.json",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Source/Ethanol.Cli/bin/Debug/net7.0/ethanol.exe",
            "args": [ "builder", "run", "-c","context-builder.ipfixcol.config.json","<","flows.ipfixcol.json" ],
            "cwd": "${workspaceFolder}/TestData/ContextBuilder"
        },
        // CONTEXT-PROVIDER
        {
            "name": "Start Service",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Source/Ethanol.Cli/bin/Debug/net7.0/ethanol.exe",
            "args": [
                "start-service",
                "-c",
                "context-provider.config.json"
            ],
            "cwd": "${workspaceFolder}/TestData/ContextProvider",
            "console": "externalTerminal",
            "env": {
                "POSTGRES_IP": "localhost",
                "POSTGRES_PORT": "1605",
                "POSTGRES_DATABASE": "ethanol",
                "POSTGRES_USER": "postgres",
                "POSTGRES_PASSWORD": "postgres"
            }
        },
        // MALWARE-SONAR
        {
            "name": "Learn Malware Profile",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Source/Ethanol.Cli/bin/Debug/net7.0/ethanol.exe",
            "args": [
                "learn-malware",
                "-r",
                "Train",
                "-o",
                "Models/lightblue.mal"
            ],
            "cwd": "${workspaceFolder}/TestData/MalwareSonar",
            "console": "externalTerminal"
        },
        {
            "name": "Test Malware Bening",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Source/Ethanol.Cli/bin/Debug/net7.0/ethanol.exe",
            "args": [
                "scan-malware",
                "-p",
                "Models/lightblue.mal",
                "-i",
                "ContextData/ctx-bening.json",
                "-o",
                "malware-test-bening.json",
                "-t",
                "0.5"
            ],
            "cwd": "${workspaceFolder}/TestData/MalwareSonar",
        },
        {
            "name": "Test Malware Infected",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Source/Ethanol.Cli/bin/Debug/net7.0/ethanol.exe",
            "args": [
                "scan-malware",
                "-p",
                "Models/lightblue.mal",
                "-i",
                "TempData/ctx-infected.json",
                "-o",
                "TestResults/malware-test-infected.json",
                "-t",
                "0.5"
            ],
            "cwd": "${workspaceFolder}/TestData/MalwareSonar",
        },
        {
            "name": "Infect Context",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Source/Ethanol.Cli/bin/Debug/net7.0/ethanol.exe",
            "args": [
                "infect-context",
                "-i",
                "ContextData/ctx-bening1.json",
                "-r",
                "Test",
                "-o",
                "TempData/ctx-infected.json",
            ],
            "cwd": "${workspaceFolder}/TestData/MalwareSonar",
        }
    ]
}