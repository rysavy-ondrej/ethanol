var reader = cmd.ExecuteReader();
reader.HasRows.Display();
var rowList = new List<HostTag>();
while (reader.Read())
{
    var row = new HostTag(reader["KeyValue"] as string,
                            reader["Source"] as string,
                            reader["Reliability"] as double? ?? 1.0,
                            reader["Data"] as string);
    rowList.Add(row);
}
reader.Close();
